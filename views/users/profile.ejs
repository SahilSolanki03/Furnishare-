<% layout("/layouts/boylerplate") -%>
<body>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h3 class="text-center mb-4"><b>User Information</b></h3>
                <div class="card user-card">
                    <div class="card-body p-3">
                        <p class="card-text"><b>Username:</b> <%= user.username %></p>
                        <p class="card-text"><b>Email:</b> <%= user.email %></p>
                        <p class="card-text"><b>First Name:</b> <%= user.firstName %></p>
                        <p class="card-text"><b>Last Name:</b> <%= user.lastName %></p>
                        <p class="card-text"><b>Address:</b> <%= user.address %></p>
                        <p class="card-text"><b>Phone:</b> <%= user.phone %></p>
                        <div class="row mb-3">
                            <form method="get" action="/users/<%= user._id %>/edit" class="col-2">
                                <button class="btn btn-dark edit-btn">Edit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
