<% layout("/layouts/boylerplate") -%>
<body>
    <h3>All listings</h3>
    <!-- <form method="get" action="/listing/new">
        <button>Create new listings</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for( let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>" class="listing-links">
            <div class="listing-card card col">
                <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">

                <div class="card-img-overlay"></div>

                <div class="card-body">
                <p class="card-text">
                    <b class="pe-1"> <%= listing.item %> </b>
                    <i>&#8377; <%= listing.price.toLocaleString("en-IN") %></i>
                </p>
                </div>
            </div>
        </a>
    <% } %>
    </div>

</body>

